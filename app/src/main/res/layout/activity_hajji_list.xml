<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <AutoCompleteTextView
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search by name, passport, group, guide, flight, unit, maktab"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/searchEditText"
        android:id="@+id/data_summary"
        android:text="Makkah: 1000, Madina: 2333, Deaths: 0001, Final 4500,\nTotal:9999"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/data_summary"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/baseline_add_circle_24"
        android:id="@+id/addCSV"
        android:onClick="addCSV"/>


</RelativeLayout>
